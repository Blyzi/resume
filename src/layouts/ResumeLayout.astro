---
export interface Props {
    title: string;
}

const { title } = Astro.props;

import Layout from "./Layout.astro";
---

<Layout title={title}>
    <div class="bg-white h-[297mm] w-[210mm]">
        <slot />
    </div>
</Layout>

<style is:global>
    @media print {
        @page {
            size: A4;
            margin: 0;
        }
    }
</style>
